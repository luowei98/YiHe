@using YiHe.Web.Core.Extensions
@using YiHe.Model.Material

@model Part

@{
    ViewBag.Title = Model.Title;
}

@section Meta
{
    <meta name="keywords" content="咨询说明,心理咨询,苏州咨询师,咨询中心,易禾心理,心理咨询师,心理问题,焦虑,抑郁,压力,治疗" />
}

@Html.Script(
    @<script type="text/javascript">
         var _bdhmProtocol = (("https:" == document.location.protocol) ? " https://" : " http://");
         document.write(unescape("%3Cscript src='" + _bdhmProtocol + "hm.baidu.com/h.js%3F32b8d5e6ef46ca7713d4e3f6e3a661b7' type='text/javascript'%3E%3C/script%3E"));
    </script>
)

<div id="maintop">
    <h5 style="background: url('@Model.IconPath') no-repeat 4px 26px">@Model.Title</h5>
</div>

<dl class="faqs">
    @foreach (Element e in Model.Elements)
    {
        <dt class="faq">
            Q@(e.No). @e.Title
            <span>点击看回答</span>
        </dt>
        <dd>
            <div class="faq_a">答:</div>
            <p>@e.Detail</p>
            <span class="faq_a"></span>
        </dd>
    }
</dl>