@using YiHe.Web.Core.Extensions

<div id="cse-search-form" style="width: 100%;">载入搜索引擎...</div>

@Html.Script(
    @<script type="text/javascript">
        google.load('search', '1', { language: 'zh-CN', style: google.loader.themes.V2_DEFAULT });
        google.setOnLoadCallback(function () {
            var customSearchOptions = {}; var customSearchControl = new window.google.search.CustomSearchControl(
          '001413556521522613671:_htoanalqay', customSearchOptions);
            customSearchControl.setResultSetSize(window.google.search.Search.FILTERED_CSE_RESULTSET);
            var options = new window.google.search.DrawOptions();
            options.enableSearchboxOnly("http://www.easyhappysz.com/Article/Search");
            customSearchControl.draw('cse-search-form', options);
        }, true);
    </script>
)
@Html.Script(
    @<script src="http://www.google.com/jsapi" type="text/javascript"></script>
)

@Html.Css(
    @<style type="text/css">
        input.gsc-search-button {
            margin-top :5px;
            padding-left:12px;
            padding-right:12px;
            margin-left:-2px;
        }
        input.gsc-input, .gsc-input-box, .gsc-input-box-hover, .gsc-input-box-focus {
            border-color: #D9D9D9;
        }
        input.gsc-search-button, input.gsc-search-button:hover, input.gsc-search-button:focus {
            border-color: #996633;
            background-color: #998961;
            background-image: none;
            filter: none;
        }
        .gsst_a {
            padding-top:5px;
        }
    </style>
)